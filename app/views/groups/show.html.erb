<h2><%= @group.name %> </h2>

<% if signed_in? %>
  <div id="count"><%= pluralize(@group.likes.count, "Like") %></div>

  <div id="like-button">
    <% if current_user.likes? @group %>
      <%= button_to "Unlike Group", unlike_group_path(@group), remote: true, method: :delete %>
    <% else %>
      <%= button_to "Like Group", like_group_path(@group), remote: true %>
    <% end %>
  </div>
<% end %>

<%= render @images %>

